<UserControl x:Class="WPF.Common.Controls.SearchInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Common.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    <Grid Width="200" Height="70" HorizontalAlignment="Left">
        <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                   Panel.ZIndex="1" Text="Search..." Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVisibility}}"></TextBlock>
        <TextBox x:Name="txtSearch" Height="40" Style="{StaticResource searchTextBox}" />
        <icon:PackIconMaterial Panel.ZIndex="1" Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center" Margin="0 0 15 0"
                               Foreground="#b0b9c6" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
